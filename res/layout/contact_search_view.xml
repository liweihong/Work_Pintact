        android:layout_toRightOf="@+id/csv_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/csv_search"
        android:layout_marginTop  ="@dimen/im_padding_20dp"
        android:layout_marginRight="@dimen/im_margin_60dp"
        android:background="@color/lr_hint_bg"
        android:textColor="@color/lr_hint_fg"
        android:hint="@string/dummy"
        />
         -->
    
    <TextView style="@style/PCNSep"
        android:layout_below="@+id/csv_search"
    	android:layout_height="1dp" 
    	android:id="@+id/csv_bottom_sep"
    	/>
    
    
    <ListView 
        android:id="@+id/csv_list"
        android:layout_below="@+id/csv_bottom_sep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>
