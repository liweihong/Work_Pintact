    android:background="#FFFFFF"
    android:id="@+id/profile_content" >

    <ImageView style="@style/ProfImage"
        android:id="@+id/parentProfileImage" 
        android:contentDescription="@string/imageDesc"
        android:paddingLeft="20dp"
