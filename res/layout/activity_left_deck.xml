        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0000FF" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:background="#00FF00"
            android:layout_width="fill_parent"
