<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    android:id="@+id/main_view"
    tools:context=".SettingMainActivity" >

    <TextView 
        android:id="@+id/logonBaseline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="#F2F2F2"
        android:visibility="invisible"
        android:textSize="33sp" />
        
    <EditText style="@style/LoginUserText"
        android:id="@+id/userText" 
        android:textAlignment="center" />

    <EditText style="@style/LoginPassText"
        android:id="@+id/passText"
        android:textAlignment="center" />
        
    <TextView style="@style/LoginBtn"
        android:id="@+id/loginBtn" />
    
    <TextView style="@style/LoginForget"
        android:id="@+id/loginForget"/>

    <TextView style="@style/LoginHowWork"
        android:id="@+id/loginHowWork"/>

    <TextView style="@style/LoginNoPin"
        android:id="@+id/loginNoPin"/>

    <TextView style="@style/LoginRegister"
        android:id="@+id/loginRegister"/>

    
</RelativeLayout>
