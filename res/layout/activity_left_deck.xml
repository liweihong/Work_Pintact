 -->
            <TableLayout
                android:id="@+id/leftTableLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"> 

			    <TableRow
			        android:id="@+id/NotificationTR"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent" >
			
			        <ImageView
			            android:id="@+id/imageNotify"
			            android:layout_width="match_parent"
			            android:layout_height="match_parent"
			            android:src="@drawable/settings" />
			
			        <TextView
			            android:id="@+id/NotifyTV"
			            android:layout_width="match_parent"
			            android:layout_height="match_parent"
			            android:layout_gravity="left"
			            android:text="@string/left_deck_notify"
			            android:layout_weight="1"
			            android:paddingLeft="20dp"
			            android:textAlignment="textStart"
			            android:textAppearance="?android:attr/textAppearanceLarge" />
			
			        <ImageView
			            android:id="@+id/imageNotify2"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_gravity="right"
			            android:src="@drawable/settings" />
     			</TableRow>

			    <TableRow
			        android:id="@+id/GroupTR"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent" >
			
			        <ImageView
			            android:id="@+id/imageGroup"
			            android:layout_width="match_parent"
			            android:layout_height="match_parent"
			            android:src="@drawable/settings" />
			
			        <TextView
			            android:id="@+id/GroupTV"
			            android:layout_width="match_parent"
			            android:layout_height="match_parent"
			            android:text="@string/left_deck_group"
			            android:layout_gravity="left"
			            android:paddingLeft="20dp"
			            android:textAlignment="textStart"
			            android:textAppearance="?android:attr/textAppearanceLarge" />
			        
			    </TableRow>

			    <TableRow
			        android:id="@+id/LabelTR"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent" >
			
			        <ImageView
			            android:id="@+id/imageLabel"
			            android:layout_width="match_parent"
			            android:layout_height="match_parent"
			            android:src="@drawable/settings" />
			
			        <TextView
			            android:id="@+id/LabelTV"
			            android:layout_width="match_parent"
			            android:layout_height="match_parent"
			            android:layout_gravity="left"
			            android:layout_weight="1"
			            android:paddingLeft="20dp"
			            android:text="@string/left_deck_label"
			            android:textAlignment="textStart"
			            android:textAppearance="?android:attr/textAppearanceLarge" />
			        
			        <ImageView
			            android:id="@+id/imageLabel2"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:src="@drawable/settings" />
			        			
			        			
			    </TableRow>
			    
			 </TableLayout>

 <!--        </ScrollView>

    </TableRow> -->


</TableLayout>
